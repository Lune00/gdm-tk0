echo " "

echo "==================--======================="
pwd
echo "==================--======================="

echo " "
echo " "
echo "done"

cp app/gdm_run/gdm_run $PATH1/gdm_run_2D_0
cp app/SNA/SNA $PATH1/SNA_2D_0
